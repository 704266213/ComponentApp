<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">
    
    
    <RadioGroup
            android:id="@+id/mainTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tab_bg"
            android:orientation="horizontal">
        
        <RadioButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:clickable="true"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTop="@drawable/home_selected"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:text="@string/home"
                android:textColor="@drawable/tab_item_color"
                android:textSize="@dimen/sp_10"
                android:focusable="true"/>
        
        <RadioButton
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:clickable="true"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTop="@drawable/hot_selected"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:text="@string/hot"
                android:textColor="@drawable/tab_item_color"
                android:textSize="@dimen/sp_10"
                android:focusable="true"/>
        
        
        <RadioButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:clickable="true"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTop="@drawable/search_selected"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:text="@string/search"
                android:textColor="@drawable/tab_item_color"
                android:textSize="@dimen/sp_10"
                android:focusable="true"/>
        
        <RadioButton
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:clickable="true"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTop="@drawable/user_selected"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:text="@string/user"
                android:textColor="@drawable/tab_item_color"
                android:textSize="@dimen/sp_10"
                android:focusable="true"/>
    </RadioGroup>
    
    <View
            android:id="@+id/main_tab_top_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            app:layout_constraintBottom_toTopOf="@+id/mainTab"
            android:background="@color/color_99999"/>
    
    <FrameLayout
            android:id="@+id/container"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_tab_top_line"
    />


</androidx.constraintlayout.widget.ConstraintLayout>